@model T3PersonalWkSpcApp.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" asp-for="Pic" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
               @Html.DropDownListFor(m => m.Category, ViewBag.Category as SelectList, "-Please select-", new { @class = "form-control" })
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qty" class="control-label"></label>
                <input asp-for="Qty" class="form-control" />
                <span asp-validation-for="Qty" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Pic" class="control-label"></label>*@
                <label for="Pic">Current Image File</label>
                <input asp-for="Pic" class="form-control" disabled/>
                @*<input asp-for="Pic" class="form-control" />*@
                 <img id = "user_img"  
    height = "100"  
    width = "90"  
    style = "border:solid" src="@Url.Content(Model.Pic)" name="Pic"/>
                @*<input asp-for="Pic" class="form-control" />*@
                @*@Html.EditorFor(model => model.Pic, new { htmlAttributes = new { @class = "form-control", @type="file"} })*@
                <label>(Optional) Change Image File</label>
                <input type="file" title="search image" id="Pic" name="NewPic" onchange="show(this)" class = "form-control" />
                @*<span asp-validation-for="Pic" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<script src="~/Scripts/jquery-1.7.1.min.js"></script>  
<script type="text/javascript">  
   function show(input) {  
      if (input.files && input.files[0]) {  
      var filerdr = new FileReader();  
      filerdr.onload = function (e) {  
         $('#user_img').attr('src', e.target.result);  
      }  
      filerdr.readAsDataURL(input.files[0]);  
   }  
}  
</script>  

<div>
    <a asp-action="IndexAdmin">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

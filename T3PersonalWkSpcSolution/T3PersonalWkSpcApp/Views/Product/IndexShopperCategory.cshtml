@model IEnumerable<T3PersonalWkSpcApp.Models.Product>

@{
    ViewData["Title"] = "IndexShopperCategory";
}

<h1>T3 Grocery Mart - Category : @ViewBag.CategoryName</h1>


<style>
    #divCard{
        position:relative;
        float:left;
        height:20%;
        width:35%;
    }
</style>

@foreach (var item in Model)
       {
           <div id="divCard" class="card">

              <!--Card image-->
              <div class="view">
           <img style="width:200px;height:200px;" src="@Url.Content(item.Pic)" alt="No Pic" class="card-img-top">
                <a href="#">
                  <div class="mask rgba-white-slight"></div>
                </a>
           </div>

            <!--Card content-->
            <div class="card-body">
            <!--Title-->
            <h4 class="card-title">@item.Name</h4>

            <!--Text-->
            @*Category: <label class="card-text">@item.Category</label>*@
            <p class="card-text">@item.Description</p>
            <a href="/Product/DetailsShopper/@item.ProductId" class="btn btn-primary">Buy 1 for $@item.Price</a>
            @*<a href="@Html.ActionLink("Show more", "Details",new{id=@item.Id})">Buy for $@item.Price</a>*@
            </div>

        </div>

 }